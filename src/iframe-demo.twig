							<span class="skeleton__paragraph" style="min-width: 40%;"></span>
						</div>
					</div>
				</div>

				<div class="col col--4">
					
					<!-- Basic -->
					{% include 'partials/layout/_nav-stacked.twig' with {
						selector_class: 'example-stacked',
						data_view_markup: 'data-view-markup="btn-y: -25px; associated-script: #scriptExample2"'
					} %}
				</div>
			</div>
		</div>
	</main>
	
{% endblock %}

{% block page_scripts %}

<script id="scriptExample">
	$(function() {
		
		// Initialize navbar
		$('.example-navbar').multilevelNav({
			'hoverIntent': true,
			'hoverIntentTimeout': 300,
			'navbarMenuBackdrop': true,
			'navbarMegaMenuBackdrop': true,
			'expanderBackdrop': true,
		});
		
		// Example how to close menu from outside the mln plugin
		$('.logo-placeholder').on('click', function(){
			$('.example-navbar').find('.mln__toggle-btn[aria-expanded="true"]').trigger('click');
		});
	});
</script>

<script id="scriptExample2">
	$(function() {
		
		// Initialize navbar
		$('.example-stacked').multilevelNav({
			'expandActiveItem': true
		});
	});
</script>

{% endblock %}